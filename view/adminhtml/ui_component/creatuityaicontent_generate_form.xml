<?xml version="1.0" encoding="UTF-8"?>

<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">
                creatuityaicontent_generate_form.creatuityaicontent_generate_form_data_source
            </item>
        </item>
        <item name="label" xsi:type="string" translate="true">Insert</item>
        <item name="template" xsi:type="string">templates/form/collapsible</item>
    </argument>
    <settings>
        <namespace>creatuityaicontent_generate_form</namespace>
        <dataScope>data</dataScope>
        <deps>
            <dep>creatuityaicontent_generate_form.creatuityaicontent_generate_form_data_source</dep>
        </deps>
        <ajaxSave>true</ajaxSave>
        <ajaxSaveType>simple</ajaxSaveType>
    </settings>
    <dataSource name="creatuityaicontent_generate_form_data_source">
        <argument name="data" xsi:type="array">
            <item name="js_config" xsi:type="array">
                <item name="component" xsi:type="string">Magento_Ui/js/form/provider</item>
            </item>
        </argument>
        <dataProvider class="Creatuity\AIContent\Ui\DataProvider\Product\Form\AIFormDataProvider"
                      name="creatuityaicontent_generate_form_data_source">
            <settings>
                <requestFieldName>entity_id</requestFieldName>
                <primaryFieldName>entity_id</primaryFieldName>
            </settings>
        </dataProvider>
    </dataSource>
    <fieldset name="fields" sortOrder="30">
        <settings>
            <label />
        </settings>
        <fieldset name="descriptions" class="Creatuity\AIContent\Ui\Component\Form\Fieldset" sortOrder="10">
            <settings>
                <label translate="true">Description</label>
                <collapsible>true</collapsible>
            </settings>
            <container name="short_description_container" component="Magento_Ui/js/form/components/group">
                <argument name="data" xsi:type="array">
                    <item name="config" xsi:type="array">
                        <item name="formElement" xsi:type="string">container</item>
                        <item name="breakLine" xsi:type="boolean">false</item>
                    </item>
                </argument>
                <field name="short_description" formElement="textarea">
                    <settings>
                        <dataType>text</dataType>
                        <label translate="true">Short Description</label>
                        <additionalClasses>
                            <class name="display-block">true</class>
                        </additionalClasses>
                    </settings>
                </field>
                <field name="short_description_max_length" formElement="input">
                    <settings>
                        <dataType>int</dataType>
                        <label translate="true">Max. length</label>
                        <additionalClasses>
                            <class name="ai_content__max-length">true</class>
                        </additionalClasses>
                        <validation>
                            <rule name="validate-digits" xsi:type="boolean">true</rule>
                            <rule name="validate-greater-than-zero" xsi:type="boolean">true</rule>
                        </validation>
                    </settings>
                </field>
                <button name="short_description_generate_btn"
                        class="Creatuity\AIContent\Ui\Component\Form\Control\Button"
                        component="Creatuity_AIContent/js/product/form/component/generate-ai-content-button"
                        template="ui/form/components/button/container">
                    <settings>
                        <title translate="true">Generate</title>
                    </settings>
                    <argument name="data" xsi:type="array">
                        <item name="config" xsi:type="array">
                            <item name="additionalForGroup" xsi:type="boolean">true</item>
                            <item name="additionalClasses" xsi:type="string">admin__field-small admin__button-aicontent-form</item>
                            <item name="aiContentType" xsi:type="string">short_description</item>
                            <item name="reference" xsi:type="string">product_form.product_form.content.container_short_description.short_description</item>
                            <item name="destination" xsi:type="string">ns = ${ $.ns }, index=short_description</item>
                            <item name="applyBtn" xsi:type="string">ns = ${ $.ns }, index=apply_short_description_btn</item>
                            <item name="maxLength" xsi:type="string">ns = ${ $.ns }, index=short_description_max_length</item>
                        </item>
                    </argument>
                </button>
                <button name="apply_short_description_btn"
                        component="Creatuity_AIContent/js/product/form/component/apply-ai-content-button"
                        template="ui/form/components/button/container">
                    <settings>
                        <title translate="true">Apply</title>
                    </settings>
                    <argument name="data" xsi:type="array">
                        <item name="config" xsi:type="array">
                            <item name="additionalForGroup" xsi:type="boolean">true</item>
                            <item name="additionalClasses" xsi:type="string">admin__field-small admin__button-aicontent-form margin-left-10</item>
                            <item name="buttonClasses" xsi:type="string">action-primary</item>
                            <item name="disabled" xsi:type="boolean">true</item>
                            <item name="aiContentType" xsi:type="string">short_description</item>
                            <item name="sourceField" xsi:type="string">ns = ${ $.ns }, index=short_description</item>
                            <item name="destination" xsi:type="string">product_form.product_form.content.container_short_description.short_description</item>
                            <item name="destinationFieldTitle" xsi:type="string">Short Description</item>
                        </item>
                    </argument>
                </button>
            </container>

            <container name="description_container" component="Magento_Ui/js/form/components/group">
                <argument name="data" xsi:type="array">
                    <item name="config" xsi:type="array">
                        <item name="formElement" xsi:type="string">container</item>
                        <item name="breakLine" xsi:type="boolean">false</item>
                    </item>
                </argument>
                <field name="description" formElement="textarea">
                    <settings>
                        <dataType>text</dataType>
                        <label translate="true">Description</label>
                        <additionalClasses>
                            <class name="display-block">true</class>
                        </additionalClasses>
                    </settings>
                </field>
                <field name="description_max_length" formElement="input">
                    <settings>
                        <dataType>int</dataType>
                        <label translate="true">Max. length</label>
                        <additionalClasses>
                            <class name="ai_content__max-length">true</class>
                        </additionalClasses>
                        <validation>
                            <rule name="validate-digits" xsi:type="boolean">true</rule>
                            <rule name="validate-greater-than-zero" xsi:type="boolean">true</rule>
                        </validation>
                    </settings>
                </field>
                <button name="description_generate_btn"
                        class="Creatuity\AIContent\Ui\Component\Form\Control\Button"
                        component="Creatuity_AIContent/js/product/form/component/generate-ai-content-button"
                        template="ui/form/components/button/container">
                    <settings>
                        <title translate="true">Generate</title>
                    </settings>
                    <argument name="data" xsi:type="array">
                        <item name="config" xsi:type="array">
                            <item name="additionalForGroup" xsi:type="boolean">true</item>
                            <item name="additionalClasses" xsi:type="string">admin__field-small admin__button-aicontent-form</item>
                            <item name="aiContentType" xsi:type="string">description</item>
                            <item name="reference" xsi:type="string">product_form.product_form.content.container_description.description</item>
                            <item name="destination" xsi:type="string">ns = ${ $.ns }, index=description</item>
                            <item name="applyBtn" xsi:type="string">ns = ${ $.ns }, index=apply_description_btn</item>
                            <item name="maxLength" xsi:type="string">ns = ${ $.ns }, index=description_max_length</item>
                        </item>
                    </argument>
                </button>
                <button name="apply_description_btn"
                        component="Creatuity_AIContent/js/product/form/component/apply-ai-content-button"
                        template="ui/form/components/button/container">
                    <settings>
                        <title translate="true">Apply</title>
                    </settings>
                    <argument name="data" xsi:type="array">
                        <item name="config" xsi:type="array">
                            <item name="additionalForGroup" xsi:type="boolean">true</item>
                            <item name="additionalClasses" xsi:type="string">admin__field-small admin__button-aicontent-form margin-left-10</item>
                            <item name="buttonClasses" xsi:type="string">action-primary</item>
                            <item name="disabled" xsi:type="boolean">true</item>
                            <item name="aiContentType" xsi:type="string">description</item>
                            <item name="destination" xsi:type="string">product_form.product_form.content.container_description.description</item>
                            <item name="sourceField" xsi:type="string">ns = ${ $.ns }, index=description</item>
                            <item name="destinationFieldTitle" xsi:type="string">Description</item>
                        </item>
                    </argument>
                </button>
            </container>
        </fieldset>
        <fieldset name="meta_tags" class="Creatuity\AIContent\Ui\Component\Form\Fieldset" sortOrder="20">
            <settings>
                <label translate="true">Meta Tags</label>
                <collapsible>true</collapsible>

            </settings>
            <container name="meta_title_container" component="Magento_Ui/js/form/components/group">
                <argument name="data" xsi:type="array">
                    <item name="config" xsi:type="array">
                        <item name="formElement" xsi:type="string">container</item>
                        <item name="breakLine" xsi:type="boolean">false</item>
                    </item>
                </argument>
                <field name="meta_title" formElement="textarea">
                    <settings>
                        <dataType>text</dataType>
                        <label translate="true">Meta Title</label>
                    </settings>
                </field>
                <button name="meta_title_generate_btn"
                        class="Creatuity\AIContent\Ui\Component\Form\Control\Button"
                        component="Creatuity_AIContent/js/product/form/component/generate-ai-content-button"
                        template="ui/form/components/button/container">
                    <settings>
                        <title translate="true">Generate</title>
                    </settings>
                    <argument name="data" xsi:type="array">
                        <item name="config" xsi:type="array">
                            <item name="additionalForGroup" xsi:type="boolean">true</item>
                            <item name="additionalClasses" xsi:type="string">admin__field-small admin__button-aicontent-form</item>
                            <item name="aiContentType" xsi:type="string">meta-title</item>
                            <item name="reference" xsi:type="string">product_form.product_form.search-engine-optimization.container_meta_title.meta_title</item>
                            <item name="destination" xsi:type="string">ns = ${ $.ns }, index=meta_title</item>
                            <item name="applyBtn" xsi:type="string">ns = ${ $.ns }, index=meta_title_apply_btn</item>
                        </item>
                    </argument>
                </button>
                <button name="meta_title_apply_btn"
                        component="Creatuity_AIContent/js/product/form/component/apply-ai-content-button"
                        template="ui/form/components/button/container">
                    <settings>
                        <title translate="true">Apply</title>
                    </settings>
                    <argument name="data" xsi:type="array">
                        <item name="config" xsi:type="array">
                            <item name="additionalForGroup" xsi:type="boolean">true</item>
                            <item name="additionalClasses" xsi:type="string">admin__field-small admin__button-aicontent-form margin-left-10</item>
                            <item name="buttonClasses" xsi:type="string">action-primary</item>
                            <item name="disabled" xsi:type="boolean">true</item>
                            <item name="aiContentType" xsi:type="string">meta-title</item>
                            <item name="destination" xsi:type="string">product_form.product_form.search-engine-optimization.container_meta_title.meta_title</item>
                            <item name="sourceField" xsi:type="string">ns = ${ $.ns }, index=meta_title</item>
                            <item name="destinationFieldTitle" xsi:type="string">Meta Title</item>
                        </item>
                    </argument>
                </button>
            </container>

            <container name="meta_keywords_container" component="Magento_Ui/js/form/components/group">
                <argument name="data" xsi:type="array">
                    <item name="config" xsi:type="array">
                        <item name="formElement" xsi:type="string">container</item>
                        <item name="breakLine" xsi:type="boolean">false</item>
                    </item>
                </argument>
                <field name="meta_keywords" formElement="textarea">
                    <settings>
                        <dataType>text</dataType>
                        <label translate="true">Meta Keywords</label>
                    </settings>
                </field>
                <button name="meta_keywords_generate_btn"
                        class="Creatuity\AIContent\Ui\Component\Form\Control\Button"
                        component="Creatuity_AIContent/js/product/form/component/generate-ai-content-button"
                        template="ui/form/components/button/container">
                    <settings>
                        <title translate="true">Generate</title>
                    </settings>
                    <argument name="data" xsi:type="array">
                        <item name="config" xsi:type="array">
                            <item name="additionalForGroup" xsi:type="boolean">true</item>
                            <item name="additionalClasses" xsi:type="string">admin__field-small admin__button-aicontent-form</item>
                            <item name="aiContentType" xsi:type="string">meta-keywords</item>
                            <item name="reference" xsi:type="string">product_form.product_form.search-engine-optimization.container_meta_keyword.meta_keyword</item>
                            <item name="destination" xsi:type="string">ns = ${ $.ns }, index=meta_keywords</item>
                            <item name="applyBtn" xsi:type="string">ns = ${ $.ns }, index=meta_keywords_apply_btn</item>
                        </item>
                    </argument>
                </button>
                <button name="meta_keywords_apply_btn"
                        component="Creatuity_AIContent/js/product/form/component/apply-ai-content-button"
                        template="ui/form/components/button/container">
                    <settings>
                        <title translate="true">Apply</title>
                    </settings>
                    <argument name="data" xsi:type="array">
                        <item name="config" xsi:type="array">
                            <item name="additionalForGroup" xsi:type="boolean">true</item>
                            <item name="additionalClasses" xsi:type="string">admin__field-small admin__button-aicontent-form margin-left-10</item>
                            <item name="buttonClasses" xsi:type="string">action-primary</item>
                            <item name="disabled" xsi:type="boolean">true</item>
                            <item name="aiContentType" xsi:type="string">meta-keywords</item>
                            <item name="destination" xsi:type="string">product_form.product_form.search-engine-optimization.container_meta_keyword.meta_keyword</item>
                            <item name="sourceField" xsi:type="string">ns = ${ $.ns }, index=meta_keywords</item>
                            <item name="destinationFieldTitle" xsi:type="string">Meta Keywords</item>
                        </item>
                    </argument>
                </button>

            </container>

            <container name="meta_description_container" component="Magento_Ui/js/form/components/group">
                <argument name="data" xsi:type="array">
                    <item name="config" xsi:type="array">
                        <item name="formElement" xsi:type="string">container</item>
                        <item name="breakLine" xsi:type="boolean">false</item>
                    </item>
                </argument>
                <field name="meta_description" formElement="textarea">
                    <settings>
                        <dataType>text</dataType>
                        <label translate="true">Meta Description</label>
                    </settings>
                </field>
                <button name="meta_description_generate_btn"
                        class="Creatuity\AIContent\Ui\Component\Form\Control\Button"
                        component="Creatuity_AIContent/js/product/form/component/generate-ai-content-button"
                        template="ui/form/components/button/container">
                    <settings>
                        <title translate="true">Generate</title>
                    </settings>
                    <argument name="data" xsi:type="array">
                        <item name="config" xsi:type="array">
                            <item name="additionalForGroup" xsi:type="boolean">true</item>
                            <item name="additionalClasses" xsi:type="string">admin__field-small admin__button-aicontent-form</item>
                            <item name="aiContentType" xsi:type="string">meta-description</item>
                            <item name="reference" xsi:type="string">product_form.product_form.search-engine-optimization.container_meta_description.meta_description</item>
                            <item name="destination" xsi:type="string">ns = ${ $.ns }, index=meta_description</item>
                            <item name="applyBtn" xsi:type="string">ns = ${ $.ns }, index=meta_description_apply_btn</item>
                        </item>
                    </argument>
                </button>
                <button name="meta_description_apply_btn"
                        component="Creatuity_AIContent/js/product/form/component/apply-ai-content-button"
                        template="ui/form/components/button/container">
                    <settings>
                        <title translate="true">Apply</title>
                    </settings>
                    <argument name="data" xsi:type="array">
                        <item name="config" xsi:type="array">
                            <item name="additionalForGroup" xsi:type="boolean">true</item>
                            <item name="additionalClasses" xsi:type="string">admin__field-small admin__button-aicontent-form margin-left-10</item>
                            <item name="buttonClasses" xsi:type="string">action-primary</item>
                            <item name="disabled" xsi:type="boolean">true</item>
                            <item name="aiContentType" xsi:type="string">meta-description</item>
                            <item name="destination" xsi:type="string">product_form.product_form.search-engine-optimization.container_meta_description.meta_description</item>
                            <item name="sourceField" xsi:type="string">ns = ${ $.ns }, index=meta_description</item>
                            <item name="destinationFieldTitle" xsi:type="string">Meta Description</item>
                        </item>
                    </argument>
                </button>
            </container>
        </fieldset>
    </fieldset>
</form>
